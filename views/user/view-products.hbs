<section>
  <div class="container mt-5">
    <div class="row">
      {{#each products}}
        <div class="col-md-4 col-lg-3 p-3">
          <div
            class="card h-100"
            style="border-radius: 15px; overflow: hidden;"
          >
            <div
              class="card-img-wrapper"
              style="height: 300px; overflow: hidden;"
            >
              <img
                class="card-img-top"
                src="/product-images/{{this._id}}.jpg"
                alt="Product image"
                style="width: 100%; height: 100%; object-fit: contain; padding: 10px; background-color: #f8f9fa;"
              />
            </div>
            <div class="card-body text-center">
              <h5 class="card-title">{{this.Name}}</h5>
              <p class="card-text">{{this.Discription}}</p>
              <a href="#" class="btn btn-primary">Add to cart</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>